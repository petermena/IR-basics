    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            
            // Needle Chart
            const needleData = {
                labels: ['18G', '19G', '20G', '21G', '22G', '25G'],
                datasets: [{
                    label: 'Outer Diameter (mm)',
                    data: [1.27, 1.07, 0.91, 0.81, 0.71, 0.51],
                    backgroundColor: 'rgba(51, 65, 85, 0.8)', // slate-700
                    borderColor: 'rgba(51, 65, 85, 1)',
                    borderWidth: 1,
                    borderRadius: 4
                }]
            };

            const needleConfig = {
                type: 'bar',
                data: needleData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'x',
                    plugins: {
                        legend: {
                            display: false
                        },
                        title: {
                            display: true,
                            text: 'Needle Gauge vs. Outer Diameter (mm)',
                            font: { size: 16 },
                            color: '#334155' // slate-700
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return ` ${context.dataset.label}: ${context.raw} mm`;
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            title: {
                                display: true,
                                text: 'Needle Gauge',
                                font: { size: 14 },
                                color: '#475569' // slate-600
                            }
                        },
                        y: {
                            beginAtZero: true,
                             title: {
                                display: true,
                                text: 'Outer Diameter (mm)',
                                font: { size: 14 },
                                color: '#475569' // slate-600
                            }
                        }
                    }
                }
            };

            const needleChartCanvas = document.getElementById('needleChart');
            if(needleChartCanvas) {
                new Chart(needleChartCanvas, needleConfig);
            }

            // French to MM converter
            const frenchInput = document.getElementById('frenchInput');
            const mmOutput = document.getElementById('mmOutput');
            if(frenchInput) {
                frenchInput.addEventListener('input', function() {
                    const frenchValue = parseFloat(this.value);
                    if (!isNaN(frenchValue) && frenchValue > 0) {
                        const mmValue = frenchValue / 3;
                        mmOutput.textContent = `${mmValue.toFixed(2)} mm`;
                    } else {
                        mmOutput.textContent = '-- mm';
                    }
                });
            }
            
            // Catheter Tabs
            const tabsContainer = document.getElementById('catheter-tabs');
            if(tabsContainer) {
                const tabButtons = tabsContainer.querySelectorAll('.tab-button');
                const catheterPanes = document.querySelectorAll('.catheter-pane');
                
                tabButtons.forEach(button => {
                    button.addEventListener('click', function() {
                        tabButtons.forEach(btn => btn.classList.remove('active'));
                        this.classList.add('active');
                        
                        const targetId = this.dataset.target;
                        
                        catheterPanes.forEach(pane => {
                            if (pane.id === targetId) {
                                pane.classList.remove('hidden');
                            } else {
                                pane.classList.add('hidden');
                            }
                        });
                    });
                });
            }
        });
    </script>
</body>
